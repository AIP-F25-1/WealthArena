{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"]
    },
    "skipLibCheck": true,
    "allowJs": true
  },
  "include": ["**/*.ts", "**/*.tsx", "src/**/*"],
  "exclude": [
    "**/node_modules", 
    "**/Pods",
    "android/**/*",
    "ios/**/*",
    "*.config.js"
  ]
}
